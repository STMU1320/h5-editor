{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowJs": true,
    // "declaration": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext"],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "components": ["./src/components"],
      "components/*": ["./src/components/*"],
      "utils": ["./src/utils"],
      "utils/*": ["./src/utils/*"]
    }
  },
  "filesGlob": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "files": [
    "./typings/custom.d.ts",
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
