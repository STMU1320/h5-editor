{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowJs": true,
    // "declaration": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext"],
    "baseUrl": ".",
  },
  "filesGlob": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "path": {
    "@c": ["../common"],
    "@c/*": ["../common/*"],
  },
  "files": [
    "./typings/custom.d.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
